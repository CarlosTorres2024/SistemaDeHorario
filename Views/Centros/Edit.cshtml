@model SistemaGestionHorarios.Models.CentroEducativo

@{
    ViewData["Title"] = "Editar Centro";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-white py-3 border-bottom-0">
                <div class="d-flex align-items-center">
                    <i class='bx bx-edit text-primary me-2' style="font-size: 1.5rem;"></i>
                    <h5 class="mb-0 fw-bold">Editar Información del Centro</h5>
                </div>
            </div>
            <div class="card-body p-4 pt-0">
                <form asp-action="Edit">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div asp-validation-summary="All" class="alert alert-danger border-0 small mb-4"></div>
                    }
                    <input type="hidden" asp-for="IdCentro" />

                    <div class="row g-3">
                        <div class="col-12">
                            <div class="form-group mb-3">
                                <label asp-for="Nombre" class="form-label d-flex align-items-center">
                                    <i class='bx bx-buildings me-1'></i> Nombre de la Institución
                                </label>
                                <input asp-for="Nombre" class="form-control" placeholder="Ej. Centro Educativo Los Pinos" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div class="form-group mb-3">
                                <label asp-for="Dirección" class="form-label d-flex align-items-center">
                                    <i class='bx bx-map-pin me-1'></i> Dirección Completa
                                </label>
                                <input asp-for="Dirección" class="form-control" placeholder="Ej. Av. Principal #123" />
                                <span asp-validation-for="Dirección" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="Teléfono" class="form-label d-flex align-items-center">
                                    <i class='bx bx-phone me-1'></i> Teléfono
                                </label>
                                <input asp-for="Teléfono" class="form-control" placeholder="Ej. 809-555-0101" />
                                <span asp-validation-for="Teléfono" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4 border-top pt-4">
                        <a asp-action="Index" class="btn btn-light px-4">
                            <i class='bx bx-chevron-left'></i> Volver
                        </a>
                        <button type="submit" class="btn btn-primary px-5 fw-bold">
                            <i class='bx bx-save me-1'></i> Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
