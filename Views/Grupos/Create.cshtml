@model SistemaGestionHorarios.Models.Grupo

@{
    ViewData["Title"] = "Nuevo Grupo";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-7">
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-white py-3 border-bottom-0">
                <div class="d-flex align-items-center">
                    <i class='bx bx-group-plus text-primary me-2' style="font-size: 1.5rem;"></i>
                    <h5 class="mb-0 fw-bold">Crear Nuevo Grupo</h5>
                </div>
            </div>
            <div class="card-body p-4 pt-0">
                <form asp-action="Create">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div asp-validation-summary="All" class="alert alert-danger border-0 small mb-4"></div>
                    }
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Nombre" class="form-label d-flex align-items-center">
                                    <i class='bx bx-id-card me-1'></i> Nombre del Grupo
                                </label>
                                <input asp-for="Nombre" class="form-control" placeholder="Ej. A, B, Mixto..." />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="NivelEducativo" class="form-label d-flex align-items-center">
                                    <i class='bx bx-layer me-1'></i> Nivel Educativo
                                </label>
                                <div class="input-group">
                                    <input asp-for="NivelEducativo" id="nivelInput" class="form-control border-end-0" placeholder="Ej. Primaria, Secundaria..." />
                                    <button class="btn btn-outline-light border border-start-0 bg-white dropdown-toggle text-secondary" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class='bx bx-plus-circle text-primary'></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 py-2 mt-1" style="max-height: 250px; overflow-y: auto; min-width: 250px;">
                                        <li class="dropdown-header border-bottom mb-2 pb-2 text-primary fw-bold">
                                            <i class='bx bx-book-open me-1'></i> Sugerir Nivel (Curso)
                                        </li>
                                        @if (ViewBag.Cursos != null)
                                        {
                                            foreach (var curso in (IEnumerable<SistemaGestionHorarios.Models.Curso>)ViewBag.Cursos)
                                            {
                                                <li><a class="dropdown-item py-2 d-flex align-items-center" href="javascript:void(0)" onclick="selectValue('nivelInput', '@curso.Nombre')">
                                                    <i class='bx bx-plus me-2 text-muted small'></i> @curso.Nombre
                                                </a></li>
                                            }
                                        }
                                        <li class="dropdown-header border-bottom my-2 pb-2 text-secondary small">Basicos</li>
                                        <li><a class="dropdown-item py-2" href="javascript:void(0)" onclick="selectValue('nivelInput', 'Primaria')">Primaria</a></li>
                                        <li><a class="dropdown-item py-2" href="javascript:void(0)" onclick="selectValue('nivelInput', 'Secundaria')">Secundaria</a></li>
                                        <li><a class="dropdown-item py-2" href="javascript:void(0)" onclick="selectValue('nivelInput', 'Técnica')">Técnica</a></li>
                                    </ul>
                                </div>
                                <span asp-validation-for="NivelEducativo" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4 border-top pt-4">
                        <a asp-action="Index" class="btn btn-light px-4">
                            <i class='bx bx-chevron-left'></i> Volver
                        </a>
                        <button type="submit" class="btn btn-primary px-5 fw-bold">
                            <i class='bx bx-save me-1'></i> Crear Grupo
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function selectValue(inputId, value) {
            document.getElementById(inputId).value = value;
            document.getElementById(inputId).focus();
        }
    </script>
}
