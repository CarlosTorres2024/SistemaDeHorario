@model SistemaGestionHorarios.Models.Grupo

@{
    ViewData["Title"] = "Eliminar Grupo";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-sm mt-5">
            <div class="card-body p-5 text-center">
                <div class="mb-4">
                    <i class='bx bx-error-circle text-danger' style="font-size: 4rem;"></i>
                </div>
                <h3 class="fw-bold mb-2">¿Eliminar Grupo?</h3>
                <p class="text-secondary mb-4">Se eliminará permanentemente el grupo <strong>@Model.Nombre</strong>.</p>
                
                <div class="bg-light p-3 rounded mb-4 text-start">
                    <div class="small text-muted mb-1">Nivel Educativo:</div>
                    <div class="fw-medium">@Model.NivelEducativo</div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdGrupo" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger py-2 fw-bold">
                            <i class='bx bx-trash me-1'></i> Sí, Eliminar Grupo
                        </button>
                        <a asp-action="Index" class="btn btn-light py-2">Cancelar y Volver</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
