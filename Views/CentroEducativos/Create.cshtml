@model SistemaGestionHorarios.Models.CentroEducativo

@{
    ViewData["Title"] = "Registrar Centro Educativo";
}

<div class="py-5">
    <div class="mb-5">
        <h1 class="h3 fw-bold mb-1">Registrar Centro Educativo</h1>
        <p class="text-secondary small">Complete la información inicial de su institución.</p>
    </div>

    <div class="bg-white p-4 p-md-5 border rounded shadow-sm">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Nombre" class="form-label fw-semibold"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre de la escuela" />
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Correo" class="form-label fw-semibold"></label>
                    <input asp-for="Correo" class="form-control" placeholder="correo@ejemplo.com" />
                    <span asp-validation-for="Correo" class="text-danger small"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Telefono" class="form-label fw-semibold"></label>
                    <input asp-for="Telefono" class="form-control" placeholder="809-000-0000" />
                    <span asp-validation-for="Telefono" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Direccion" class="form-label fw-semibold"></label>
                    <input asp-for="Direccion" class="form-control" placeholder="Av. Principal #123" />
                    <span asp-validation-for="Direccion" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Mision" class="form-label fw-semibold"></label>
                <textarea asp-for="Mision" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Mision" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Vision" class="form-label fw-semibold"></label>
                <textarea asp-for="Vision" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Vision" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary px-4">Registrar</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary px-4">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
